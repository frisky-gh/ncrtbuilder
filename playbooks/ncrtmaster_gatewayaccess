#!/bin/bash

if [ $# -lt 4 ] ; then
	echo "usage: % $0 SERVICE VHOST INDEX HOST"
	exit 1
fi

SERVICE=$1
VHOST=$2
INDEX=$3
HOST=$4

{% if AGENTPACKAGE == "nrpe-ng" %}
/usr/lib/nagios/plugins/check_nrpe_ng -C /etc/nagios/check_nrpe_ng.cfg -H $HOST -c ncrtagent_gatewaycheck -a $SERVICE $VHOST $INDEX
{% elif AGENTPACKAGE == "nrpe" %}
/usr/lib/nagios/plugins/check_nrpe {% if NRPETLS == "no" %}-n{% endif %} -p {{NRPEPORT}} -H $HOST -c ncrtagent_gatewaycheck -a $SERVICE $VHOST $INDEX
{% endif %}

