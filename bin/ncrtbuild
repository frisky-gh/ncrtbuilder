if( open my $f, '<', "$CONFDIR/ncrtmasters.conf" ){
	while( <$f> ){
		chomp;
		next if m"^\s*(#|$)";
		push @ncrtmasters, $_;
	}
	close $f;
}

####
my @ncrtagents;
if( open my $f, '<', "$CONFDIR/ncrtagents.conf" ){
