		my ($host, $agenttype, @param) = split m"\s+";
		my $g = "$WORKDIR/ncrtagent/$host/ncrtagent_$agenttype.conf";
		open my $i, ">", $g or do {
			die "$g: cannot open, stopped";
		};
		foreach my $p ( @param ){
			print $i "$p\n";
			die unless $p =~ m"^(\w+)=(.*)$";
			my $k = $1;
